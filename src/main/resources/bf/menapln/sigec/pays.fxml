<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="paysAnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bf.menapln.view.controller.PaysController">
   <children>
      <Label layoutX="500.0" layoutY="-4.0" prefHeight="18.0" prefWidth="210.0" style="-fx-font-size: 20;" text="Gestion des Pays" textFill="RED" />
        <SplitPane dividerPositions="0.5" layoutX="10" layoutY="10" orientation="HORIZONTAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
            <VBox spacing="3">
                <TitledPane text="Enregistrement Pays" textFill="RED">
                    <VBox spacing="3" style="-fx-border-color: blue;">
                        <HBox spacing="5">
                            <VBox>
                                <Label text="Indicatif *">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font></Label>
                                <TextField fx:id="indicatifField" prefWidth="250.0" />
                            </VBox>
                        </HBox>
                        <HBox spacing="5">
                            <VBox>
                                <Label text="Pays *">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font></Label>
                                <TextField fx:id="nomPaysField" prefWidth="250.0" />
                            </VBox>
                        </HBox>
                        <HBox spacing="5">
                            <VBox>
                                <Label text="Nationalité *">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font></Label>
                                <TextField fx:id="nationaliteField" prefWidth="250.0" />
                            </VBox>
                        </HBox>
                    </VBox>
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
                </TitledPane>  
                <HBox alignment="CENTER" prefWidth="991.0" spacing="20">
                    <Button onAction="#saveAction" style="-fx-background-color: green;" text="Enregistrer" textFill="#e7e1e1" />
                    <Button style="-fx-background-color: red;" text="Annuler" textFill="#e4dddd" />
                </HBox>
            </VBox>
            <VBox>
             <TitledPane text="Listes des Pays" textFill="RED">
                    <TableView fx:id="tableView" prefHeight="262.0" prefWidth="800.0">
                        <columns>
                            <TableColumn fx:id="colId" text="Id" visible="false">
                              <cellValueFactory>
                                 <PropertyValueFactory property="Identifiant" />
                              </cellValueFactory>
                           </TableColumn>
                           <TableColumn fx:id="colIndicatif" text="Indicatif">
                              <cellValueFactory>
                                 <PropertyValueFactory property="indicatif" />
                              </cellValueFactory>
                           </TableColumn>
                           <TableColumn fx:id="colNomPays" text="Pays">
                              <cellValueFactory>
                                 <PropertyValueFactory property="nomPays" />
                              </cellValueFactory>
                           </TableColumn>
                           <TableColumn fx:id="colNationalite" text="Nationalité">
                              <cellValueFactory>
                                 <PropertyValueFactory property="nationalite" />
                              </cellValueFactory>
                           </TableColumn>
                        </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                    </TableView>
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </TitledPane> 
            </VBox>
        </SplitPane>
        <TextField fx:id="rechercheField" layoutX="1042.0" layoutY="22.0" />
        <Label layoutX="959.0" layoutY="26.0" text="Rechercher">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
   </children>
</AnchorPane>
